[user]
	name = yoichi ojima
	email = yoichiojima@gmail.com

[core]
	editor = nvim
	excludesfile = ~/.gitignore_global
	autocrlf = input
	ignorecase = false

[init]
	defaultBranch = main

[push]
	default = current
	autoSetupRemote = true

[pull]
	rebase = false

[merge]
	tool = vimdiff

[diff]
	tool = vimdiff

[alias]
	st = status -sb
	co = checkout
	br = branch
	ci = commit
	df = diff
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	last = log -1 HEAD
	unstage = reset HEAD --
	amend = commit --amend --no-edit
	undo = reset --soft HEAD^

[color]
	ui = auto
	diff = auto
	status = auto
	branch = auto

[credential]
	helper = osxkeychain

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true